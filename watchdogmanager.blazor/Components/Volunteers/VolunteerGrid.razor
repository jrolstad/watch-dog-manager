@if (Data == null)
{
    <MatProgressCircle Indeterminate="true" FourColored="true" />
}
else
{
    <MatTable Items="@Data" class="mat-elevation-z5" ShowPaging="false" UseSortHeaderRow="true">
        <MatTableHeader>
            <MatSortHeaderRow SortChanged="@SortData">
                <MatSortHeader></MatSortHeader>
                <MatSortHeader SortId="name"><span style="width:300px">Name</span></MatSortHeader>
                <MatSortHeader SortId="name">Email</MatSortHeader>
                <MatSortHeader SortId="name">Students</MatSortHeader>
            </MatSortHeaderRow>
        </MatTableHeader>
        <MatTableRow>
            <td>
                <MatButton Command="EditCommand" CommandParameter="@context.Id">Edit</MatButton>&nbsp;
                <MatButton Command="DeleteCommand" CommandParameter="@context.Id">Delete</MatButton>
            </td>
            <td>@context.Name</td>
            <td>@context.Email</td>
            <td>@GetStudentDisplay(context)</td>
        </MatTableRow>
    </MatTable>
}
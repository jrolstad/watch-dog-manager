@if (Data == null)
{
    <MatProgressCircle Indeterminate="true" FourColored="true" />
}
else
{
    <p>
        <MatTextField @bind-Value="@Data.Name" Label="Name" FullWidth="true"></MatTextField>
    </p>

    @foreach (var item in Data.Sessions)
    {
        <div class="mat-layout-grid">
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-6">
                    <MatTextField @bind-Value="@item.Description" Label="Description" FullWidth="true"></MatTextField>
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-4">
                    <MatCheckbox @bind-Value="@item.IsInstructorLed" Label="Instructor Led"></MatCheckbox>
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-2">

                </div>

                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-5">
                    <MatTextField @bind-Value="@item.StartValue" Type="time" Label="Start"></MatTextField>
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-5">
                    <MatTextField @bind-Value="@item.EndValue" Type="time" Label="End"></MatTextField>
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-2">
                    <MatButton Icon="delete" Command="DeleteSessionCommand" CommandParameter="@item"></MatButton>
                </div>
            </div>
        </div>
        <MatDivider></MatDivider>
    }
    <br />
    <MatButton Raised="true" OnClick="AddSession">Add Session</MatButton>
}
@page "/volunteers"
<h2 class="mat-h2">Volunteers</h2>

<MatButton Raised="true" OnClick="OpenNewDialog">Add Volunteer</MatButton>
<br />
<watchdogmanager.blazor.Components.Volunteers.VolunteerGrid Data="Data" OnEdit="OnEdit" OnDelete="OnDelete" />

<MatDialog @bind-IsOpen="@DialogIsOpen">
    <MatDialogTitle>Details</MatDialogTitle>
    <MatDialogContent>
        <div style="min-width:300px">
            <watchdogmanager.blazor.Components.Volunteers.VolunteerDetail Data="SelectedItem" />
        </div>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="CancelClick">Cancel</MatButton>
        <MatButton OnClick="SaveClick">Save</MatButton>
    </MatDialogActions>
</MatDialog>
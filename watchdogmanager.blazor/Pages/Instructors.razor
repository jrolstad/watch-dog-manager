@page "/instructors"
<h2 class="mat-h2">Instructors</h2>

<MatButton Raised="true" OnClick="OpenNewDialog">Add Instructor</MatButton>
<br />
<watchdogmanager.blazor.Components.Instructors.InstructorGrid Data="Data" OnEdit="OnEdit" OnDelete="OnDelete" />

<MatDialog @bind-IsOpen="@DialogIsOpen">
    <MatDialogTitle>Details</MatDialogTitle>
    <MatDialogContent>
        <div style="min-width:300px">
            <watchdogmanager.blazor.Components.Instructors.InstructorDetail Data="SelectedItem"/>
        </div>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="CancelClick">Cancel</MatButton>
        <MatButton OnClick="SaveClick">Save</MatButton>
    </MatDialogActions>
</MatDialog>
@page "/scheduletemplates"
<h2 class="mat-h2">Schedule Templates</h2>

<MatButton Raised="true" OnClick="OpenNewDialog">New Schedule Template</MatButton>
<br />

<watchdogmanager.blazor.Components.ScheduleTemplates.ScheduleTemplateGrid Data="Data" OnEdit="OnEdit" OnDelete="OnDelete" />

<MatDialog @bind-IsOpen="@DialogIsOpen">
    <MatDialogTitle>Details</MatDialogTitle>
    <MatDialogContent>
        <div style="min-width:300px">
            <watchdogmanager.blazor.Components.ScheduleTemplates.ScheduleTemplateDetail Data="SelectedItem" />
        </div>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="CancelClick">Cancel</MatButton>
        <MatButton OnClick="SaveClick">Save</MatButton>
    </MatDialogActions>
</MatDialog>
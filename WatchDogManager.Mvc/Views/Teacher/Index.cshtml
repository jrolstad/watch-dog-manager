@{
    ViewBag.Title = "Home Page";
}
<div id="teacherScope">
    
    <div class="row">
        <span class="alert alert-danger col-sm-offset-2 col-sm-8 top5"
              data-bind="visible: errorMessageVisible" style="display: none">

            <span class="glyphicon glyphicon-warning-sign"></span>
            <span data-bind="html: errorMessage"></span>
        </span>

    </div>

    <div class="panel panel-primary top15">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6"><h3 id="form-header" class="panel-title">Teachers</h3></div>
                <div class="col-md-6"><button type="button" class="btn btn-info pull-right" data-bind="click: showNew">New</button></div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-condensed table-striped">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>Room</th>
                    <th></th>
                </tr>
                </thead>
                <tbody data-bind="foreach:teachers">
                <tr>
                    <td data-bind="text: FirstName"></td>
                    <td data-bind="text: LastName"></td>
                    <td data-bind="text: Grade"></td>
                    <td data-bind="text: RoomNumber"></td>
                    <td><button type="button" class="btn btn-primary pull-right" data-bind="click: $parent.showDetail">View</button></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <div id="detail-dialog" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title"><span data-bind="text: selectedTeacherName"></span></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <label class="col-md-5 control-label">First Name</label>
                        <input type="text" class="form-control" data-bind="value: selectedTeacherFirstName" />
                    </div>
                    <div class="row">
                        <label class="col-md-5 control-label">Last Name</label>
                        <input type="text" class="form-control" data-bind="value: selectedTeacherLastName" />
                    </div>
                    <div class="row">
                        <label class="col-md-5 control-label">Grade</label>
                        <input type="text" class="form-control" data-bind="value: selectedTeacherGrade" />
                    </div>
                    <div class="row">
                        <label class="col-md-5 control-label">Room</label>
                        <input type="text" class="form-control" data-bind="value: selectedTeacherRoomNumber" />
                    </div>
                    <div class="row">
                        <h3>Availability</h3>
                    </div>
                    <div class="row">
                        <table class="table table-condensed">
                            <thead>
                            <tr>
                                <th></th>
                                <th class="text-center">M</th>
                                <th class="text-center">T</th>
                                <th class="text-center">W</th>
                                <th class="text-center">Th</th>
                                <th class="text-center">F</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>9:30AM</td>
                                <td><input type="checkbox" class="form-control text-center" checked /></td>
                                <td><input type="checkbox" class="form-control text-center" /></td>
                                <td><input type="checkbox" class="form-control text-center" /></td>
                                <td><input type="checkbox" class="form-control text-center" /></td>
                                <td><input type="checkbox" class="form-control text-center" /></td>
                            </tr>
                            </tbody>
                        </table>
                       
                    </div>
                   
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" data-bind="click: deleteSelected">Delete</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bind="click: saveChanges" data-dismiss="modal">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/application/viewmodels/TeacherViewModel.js")

    <script type="text/javascript">

        $(document).ready(function() {
            var baseUrl = '@Url.RouteUrl("DefaultApi", new {httproute = "", controller = "Teacher"})';
            var detailDialog = $("#detail-dialog");

            var viewModel = new TeacherViewModel(baseUrl, detailDialog);
            ko.applyBindings(viewModel);

            viewModel.getTeachers();
        });

    </script>
}